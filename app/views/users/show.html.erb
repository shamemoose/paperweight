<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      	Joined <%= @user.created_at.strftime("%B %Y") %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
  	<%= render 'follow_form' if logged_in? %>
    <h3>Publications (<%= @user.publications.count %>)</h3>
      <% if @user.publications.any? %>
	      <%= will_paginate @publications %>
	      <ol class="publications">
	        <%= render @publications %>
	      </ol>
	      <%= will_paginate @publications %>
      <% else %>
      	<%= @user.name %> has no publications yet.
      <% end %>
  </div>
</div>