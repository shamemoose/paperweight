<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<table>
  <thead>
    <tr>
      <th colspan="3">Publications</th>
    </tr>
  </thead>

  <tbody>
  	<% if @user.publications.count > 0 %>
	    <% @user.publications.each do |publication| %>
	      <tr>
	        <td><%= link_to publication.title, publication_path(publication) %></td>
	        <td><%= publication.description %></td>
	        <td><%= publication.publication_date %></td>
	      </tr>
	    <% end %>
	<% else %>
		<td colspan="3"><%= @user.name %> hasn't published anything yet!</td>
	<% end %>
  </tbody>
</table>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
