<% if logged_in? %>
  <div class="row">
    <div class="col-md-8">
      <h3>Recent Publications</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
	<div class="center jumbotron">
	  <h1>Welcome to Paperweight</h1>

	  <h2>
	     Share, review, and publish articles for the whole world to see.
	  </h2>

	  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
	</div>
<% end %>